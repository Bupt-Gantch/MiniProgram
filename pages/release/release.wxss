/* pages/release/release.wxss */
 @import "../tpls/roll/roll_tpl.wxss";

page {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #fffef9
}

.description {
  height: 400rpx;
  width: 100%;
  margin-top: 100rpx;
  margin-bottom: 10rpx;
}
.description textarea{
  width: 100%
}

.picture image {
  width: 70rpx;
  height: 70rpx;
}

.showPic{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.showPic image{
  width: 33%;
  height: 150rpx;
  padding-right: 8rpx 
}

.line{
  height: 1rpx;
  width: 100%;
  background-color: #a8d3ba;
}

.btn-publish{
  position: fixed;
  display: flex;
  top: 20rpx;
  right: 10rpx;
  width: 150rpx;
}

.btn-publish button{
  font-size: 30rpx;
  background-color: #dadada;
}
