/* pages/release/release.wxss */

page {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.description {
  height: 400rpx;
  width: 100%;
  background-color: #fff;
  margin-top: 100rpx;
  margin-bottom: 10rpx;
}
.description textarea{
  width: 100%
}

.picture image {
  width: 70rpx;
  height: 70rpx;
}

.showPic{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.showPic image{
  width: 33%;
  height: 150rpx;
}

.line{
  height: 1rpx;
  width: 100%;
  background-color: rgb(214, 210, 210);
}

.btn-publish{
  position: fixed;
  display: flex;
  top: 20rpx;
  right: 10rpx;
  width: 150rpx;
}

.btn-publish button{
  font-size: 30rpx;
  background-color: #fff;
}
