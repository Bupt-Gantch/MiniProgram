/* pages/my/my.wxss */
@import "../tpls/base.wxss";

.my-container{
    background-color:#EDEDED;
    height: 100vh;
    width:100%;
    
}
.my-header{
    height: 20%;
    background-color: #AB956D;
    color: #fff;
    display: flex;
    justify-content:center;
    align-items: center;
    flex-direction: column;
    padding: 30rpx;
    font-size: 28rpx;
}

.my-header userinfo text{
    text-align: center;
    color: #F5F6F5;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo button{
  
  color: #AB956D;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  
}



.my-main{
    
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #EDEDED;
}

.my-item{
    padding: 30rpx 0;
    color: #AB956D;
    text-align: center;
    border-bottom: 1rpx solid #EDEDED;
    font-size: 30rpx;
    background-color: #fff;
    position: relative;
}
.item-title image{
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 10rpx;
}

.order-item{
    margin-bottom: 15rpx;
    color: #777777;
    background-color: #fff;
    font-size: 28rpx;
}
.order-item:last-child{
    margin-bottom:0;
}
.order-header{
    margin-left: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
    padding: 25rpx 0;
}
.order-header text:last-child{
    margin-left: 10rpx;
}
.order-main{
    display: flex;
    height:150rpx;
    color: #6D6D6D;
    padding:20rpx 30rpx;
}
.order-main .item-left{
    flex-basis: 150rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.order-main .item-left image{
    height: 100%;
    width: 100%;
}
.order-main .item-middle{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.order-main .item-middle view{
    margin: 10rpx 0;
}
.order-main .item-right{
    display: flex;
    flex-basis: 120rpx;
    align-items: center;
    justify-content:flex-end;
}

.order-bottom{
    margin-left: 30rpx;
    border-top: 1rpx solid #EDEDED;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #2F2F2F;
}
.order-bottom .pay{
    width: 170rpx;
    height: 60rpx;
    margin-right: 30rpx;
    background-color:#B42F2D;
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}
.order-bottom .pay:active{
    background-color:#9a211f;
}
.no-data{
    background: #fff;
}