/* pages/my/my.wxss */
@import "../tpls/base.wxss";
@import "../tpls/modal/modal-tpl.wxss";
 @import "../tpls/roll/roll_tpl.wxss";
 
page {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #fffef9
}

.my-container {
  background-color: #ededed;
  height: 100vh;
  width: 100%;
}

.my-header {
  height: 20%;
  background-color: #9ABAF5;
  color: #dbe8f1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 30rpx;
  font-size: 28rpx;
}

.my-header userinfo text {
  text-align: center;
  color: #dbe8f1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname{
  margin-bottom: 10rpx;
}

.userinfo button {
  color: #dbe8f1;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.language {
  position: fixed;
  display: flex;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 35rpx;
  color: #5a9ec8;
}

.my-main {
  width: 100%;
  border-top: 5rpx solid #5a9ec8;
  top: 10rpx
}

.my-item {
  padding: 30rpx 0;
  color: #5a9ec8;
  text-align: center;
  border-bottom: 5rpx solid #5a9ec8;
  font-size: 30rpx;
  background-color: #ededed;
  position: relative;
}


.item-title image {
  position: absolute;
  transform: rotate(270deg);
  height: 48rpx;
  width: 48rpx;
  right: 10rpx;
}

.order-item {
  margin-bottom: 15rpx;
  color: #777;
  background-color: #fff;
  font-size: 28rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-header {
  margin-left: 30rpx;
  border-bottom: 1rpx solid #ededed;
  padding: 25rpx 0;
}

.order-header text:last-child {
  margin-left: 10rpx;
}

.order-main {
  display: flex;
  height: 150rpx;
  color: #6d6d6d;
  padding: 20rpx 30rpx;
}

.order-main .item-left {
  flex-basis: 150rpx;
  height: 100%;
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.order-main .item-left image {
  height: 100%;
  width: 100%;
}

.order-main .item-middle {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-main .item-middle view {
  margin: 10rpx 0;
}

.order-main .item-right {
  display: flex;
  flex-basis: 120rpx;
  align-items: center;
  justify-content: flex-end;
}

.order-bottom {
  margin-left: 30rpx;
  border-top: 1rpx solid #ededed;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #2f2f2f;
}

.order-bottom .pay {
  width: 170rpx;
  height: 60rpx;
  margin-right: 30rpx;
  background-color: #b42f2d;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.order-bottom .pay:active {
  background-color: #9a211f;
}

.no-data {
  background: #fff;
}
