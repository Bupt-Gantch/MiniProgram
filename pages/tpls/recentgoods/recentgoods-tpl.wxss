.goods-box{
  width: 100%;
  margin:0 20rpx 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction:column;
  justify-content:space-between;
}
.goods-item{
  width: 100%;
  height: 430rpx;
  margin-bottom:20rpx; 
  border-top: 0.1rpx #AB956D solid;
  
}
.goods-header{
  display: flex;
  height: 25%;
  width: 100%;
  color: #989898;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.goods-header view.image{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.userImage{
  width:60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.header-right{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width:50%;
  height: 60rpx;
  margin:10rpx 5rpx;
}
.header-right view.nickName{
  height: 50%;
  font-size: 28rpx;
  padding: 0rpx 0rpx 5rpx;
  text-align: center;
  margin-bottom: 10rpx;
  color: #001;
}
.header-right view.campus-time{
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.campus-time text{
  margin: 5rpx 0rpx ;
  font-size: 25rpx;
  
}
.campus-time view.middle-border{
  margin: 5rpx 10rpx ;
  width: 2rpx;
  height: 30rpx;
  border-right: 1rpx #989898 solid;
}

.goods-middle{
  width: 100%;
  height: auto;
  overflow: hidden;
  white-space: nowrap;
}

.scroll-image{
  height: 100%;
  width: 100%;
  margin: 10rpx 0rpx;
  overflow: hidden;
  white-space: nowrap;

}
.scroll-image view.items{
  margin: 5rpx 5rpx;
  display: inline-block;
  border: 1rpx #989898 solid;
}
.goods-image{
  width: 170rpx;
  height: 170rpx;
}

.goods-bottom{
  margin-top: 10rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;

}
.goods-description{
  width: 100%;
  font-size: 35rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-bottom view.bottom{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.price{
  font-size: 39rpx;
  color: #FE4365;
}

.price::before{
  content: '\0A5';
  font-family: 'Microsoft YaHei';
  color: #FE4365;
  
}
.message{
  flex: 1;    /* 子项分配父项剩余空间的比，1代表全部分配，默认为0，还可以为小数*/
  text-align:right;    
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 10rpx;
}
.message image{
  
  height: 50rpx;
  width: 50rpx;
}