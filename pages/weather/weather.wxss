/* pages/weather/weather.wxss */
 @import "../tpls/roll/roll_tpl.wxss";
 
.night{
  width: 100%;
  height: 100vh;
  background-color: #1a2933;
  color: #fffef9;
  font-size: 40rpx;
  z-index: -1;
}

.day{
  width: 100%;
  height: 100vh;
  background-color: #87CEEB;
  color: #fffef9;
  font-size: 40rpx;
  z-index: -1;
}

.title {
  text-align: center;
  justify-content: center;
  align-content: center;
}

.usercontainer {
  position: relative;
  margin-top: 50rpx;
}

.icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 10rpx;
  top: 50%;
  margin-top: -28rpx;
}

.address {
  width: 100%;
  font-size: 32rpx;
  height: 60rpx;
  padding-left: 35px;
  box-sizing: border-box;
}

.search_view {
  margin-top: 30rpx;
  height: 100rpx;
  border-radius: 20rpx;
  font-weight: bold;
  font-size: 40rpx;
  text-align: center;
  justify-content: center;
  align-content: center;
}

.weatherPicture image {
  width: 60rpx;
  height: 50rpx;
}

.weather_detail {
  justify-content: center;
  align-content: center;
  text-align: center;
  margin-top: 30rpx;
  border-top: 1rpx solid;
}

.city_view {
  font-size: 50rpx;
}

.now_temperature{
  font-size: 70rpx;
  margin-bottom: 40rpx;
}

.now_weather{
  margin-bottom: 20rpx;
}

.weather_forecast {
  margin: 10rpx 10rpx;
  width: 100%;
  display: flex;
  white-space: nowrap;
  overflow: hidden;
}

.weather_des {
  margin: 10rpx 10rpx;
  width: 100%;
  display: flex;
  white-space: nowrap;
  overflow: hidden;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.td {
    width:25%;
    justify-content: center;
    text-align: center;
    margin-bottom: 10rpx;
}
