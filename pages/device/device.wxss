@import "../tpls/base.wxss";
@import "../tpls/modal/modal-tpl.wxss";
.detail-container {
  background-color:#e7eae9;/*#24292e*/
  color:#F9F9F9;
  padding: 0rpx 0;
  box-sizing: border-box;
  font-family: "Microsoft Yahei";
  height: 100vh;
}

.detail-header{
  background-color: #a8d3ba;
  margin-bottom: 20px;
  height: 60px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.detail-header view.content{
  margin-left: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.detail-header image{
  height: 80rpx;
  width: 80rpx;
  margin: 0 10rpx;
}
.detail-header view view{
  margin: 0 10rpx;
}
.device-image{
  background-color: #e7eae9;
}

.detail-main{
  background-color: #a8d3ba;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start; 
  justify-content: flex-start;  /*主轴*/
  
}
.deviceInfo{
  padding: 10px 10px 30px 10px;
  width: 100%;
}
.firstLine,.lines{
  width: 95%;
  padding-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

/*table */
.IASZtable{
  margin-bottom: 20px; 
  background-color: #e7eae9;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}

.th {
  width: 40%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
} 
/* end*/
.detail-main view.status{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.detail-main view.bottom{
  margin: 10px; /* 上右下左*/
  margin-right: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 95%;
}
.warningRecord{
  margin-left: 0px;
  margin-right: 0px;
}
.msgPublish{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.msgPublish view{
  margin: 0px 10px;
}

.button-hover {
  background-color: wheat;
}

.curtain-btn{
  width:95%;
  height:200rpx;
  display:flex;
  text-align:center;
  justify-content:space-around;
  align-items:center;
  flex-direction:row;
}













